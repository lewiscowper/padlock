@import "nib";

$font-family = "Clear Sans";
$font-family-fallback = sans-serif;

$font-size-small = 16px;
$font-size-default = 18px;
$font-weight-thin = 100;
$font-weight-light = 300;
$font-weight-regular = 400;
$font-weight-bold = 700;

$color-primary = #59c6ff;
$color-secondary = #555555;
$color-tertiary = #c5c5c5;
$color-quaternary = #f5f5f5;
$color-quinary = #ffffff;

$text-color = $color-secondary;
$text-color-light = $color-quinary;
$text-color-faint = $color-tertiary;

$color-blue = #59c6ff;
$color-green = #9eed6d;
$color-yellow = #ffe85c;
$color-red = #ff8283;

$placeholder-color = $text-color-faint;
$placeholder-color-light = $color-quaternary;

$scrim-color = $color-quinary;
$scrim-opacity = 0.8;

$row-height = 50px;

$toaster-easing = cubic-bezier(1, -0.3, 0, 1.3);

unselectable() {
    cursor: default;
    user-select: none;
}

position-sticky() {
    position: -webkit-sticky;
    position: -moz-sticky;
    position: -o-sticky;
    position: -ms-sticky;
    position: sticky;
}

tap-highlight() {
    position: relative;
    cursor: pointer;

    &::after {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: currentColor;
        opacity: 0;
        transition: opacity 0.3s;
        pointer-events: none;
    }

    &:active::after {
        opacity: 0.3;
        transition: opacity 0.1s;
    }
}

.tap-highlight {
    tap-highlight();
}

:host, button, input {
    font-family: $font-family, $font-family-fallback;
    font-weight: $font-weight-regular;
    font-size: $font-size-default;
    color: $text-color;
    -webkit-font-smoothing: antialiased;
    -webkit-tap-highlight-color: transparent;
}

a {
    text-decoration: none;
    color: inherit;
}

button, a.button {
    display: inline-block;
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    border: none;
    background: #fff;
    margin: 0;
    height: $row-height;
    line-height: $row-height;
    padding: 0 15px;
    cursor: pointer;
    color: $color-primary;
    text-align: center;
    overflow: ellipsis;
    tap-highlight();
}

button.primary {
    background: $color-primary;
    color: $text-color-light;
}

button.ghost {
    background: transparent;
    color: $text-color-light;
    font-weight: 700;
    line-height: 46px;
    font-size: 120%;
}

input {
    border: none;
    font-family: inherit;
    font-size: inherit;
    font-weight: 400;
    color: inherit;
    border-radius: 0;
    background: $color-quinary;
    margin: 0;
    padding: 0 10px;
    height: $row-height;
    appearance: none;
    box-sizing: border-box;
}

input.ghost, :host(.ghost) > input {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border-top: solid 1px #fff;
    border-bottom: solid 1px #fff;

    &::-webkit-input-placeholder {
       color: rgba(255, 255, 255, 0.5);
    }
}

textarea {
    font-weight: inherit;
    font-family: inherit;
    font-size: inherit;
    color: inherit;
    border: none;
    background: #fff;
    margin: 0;
    display: block;
    padding: 0;
    border-radius: 0;
    appearance: none;
    resize: none;
}

textarea[nowrap] {
    white-space: pre;
    word-wrap: normal;
    overflow-x: scroll;
}

input:not(:focus), textarea:not(:focus) {
    cursor: pointer;
}

strong {
    font-weight: $font-weight-bold;
    color: $color-primary;
}

::-webkit-search-cancel-button {
    display: none;
}

*:focus {
    outline: none;
}

::placeholder {
   color: $placeholder-color;
   font-weight: $font-weight-thin;
}

[hidden] {
    display: none !important;
}

input[type=range] {
    appearance: none;
    width: 100%;
}

input[type=range]:focus {
    outline: none;
}

input[type=range]::-webkit-slider-runnable-track {
    width: 100%;
    height: 4px;
    cursor: pointer;
    background: $color-quaternary;
    border-radius: 5px;
}

input[type=range]::-webkit-slider-thumb {
    height: 50px;
    width: 50px;
    margin-top: -23px;
    position: relative;
    border-radius: 100%;
    background: $color-primary;
    cursor: pointer;
    appearance: none;
    border: none;
    box-sizing: border-box;
    padding: 12px;
    background-clip: content-box;
}
